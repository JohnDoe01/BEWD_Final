<h1>New Client</h1>

<%= form_for(@client) do |f| %>
  <div>
    <%= f.label :advertiser %><br>
    <%= f.text_field :advertiser %>
  </div>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', clients_path %>

