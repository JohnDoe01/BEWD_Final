  <h1>Clients list</h1>

  <div class="table-responsive">
    <table class="table">
      <tr>
        <th>Advertiser</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th colspan="3">Actions</th>
      </tr>
     
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.advertiser %></td>
          <td><%= client.name %></td>
          <td><%= client.phone %></td>
          <td><%= client.email %></td>
<!--           <td><%= link_to 'Show', client %></td> -->
          <td><%= link_to 'Edit', edit_client_path(client) %></td>
          <td><%= link_to 'Delete', client_path(client), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to 'New Client', new_client_path, :class => "btn btn-primary" %>
  </div>


