<%= form_for @booking, :html => { :multipart => true } do |f| %>
  <% if @booking.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@booking.errors.count, "error") %> prohibited
      this booking from being saved:</h4>
    <ul>
    <% @booking.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :booking_number %><br>
    <%= f.text_field :booking_number, :class => "form-control" %>
  </div>
 
  <div class="form-group">
    <%= f.label :issue_date %><br>
    <%= f.select :issue_id, Issue.all.collect{|i| [i.issue_date,i.id]}, {}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :client %><br>
    <%= f.select :client_id, Client.all.collect{|c| [c.advertiser,c.id]}, {}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :ad_size %><br>
    <%= f.select :ad_size, ["FP","1/2H","1/2V","1/3H","1/3V","1/4H","1/4V","PAN"], 
    {:include_blank => "Please select an ad size"}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :position %><br>
    <%= f.select :position, ["COU","NAT","COU","NSW","QLD","VIC","SA","NT","ACT","WA","FOR","P&S","MPS","GEN"], 
    {:include_blank => "Please select a position"}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.select :status, ["ENTERED", "REPEAT MATERIAL","CREATIVE REQUIRED","APPROVAL REQUESTED","APPROVED"], 
    {:include_blank => "Please select a status"}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :creative %><br>
    <%= f.file_field :creative %>
  </div>


  <div class="form-group">
    <%= f.submit :class => "btn btn-primary" %>
  </div>

<% end %>




